@model MVCstok.Models.Entity.TBLKULLANICI

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Animasyonlu Login Form</title>
    <link rel="stylesheet" href="~/AnimasyonluLoginForm/style.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
</head>
<body>
    <div class="container">
        <div class="logo123">
            <img src="~/AnimasyonluLoginForm/images.png" alt="LOGO" />
        </div>

        @using (Html.BeginForm("GirisYap", "Guvenlik", FormMethod.Post)) {
            <div class="title">Giriş Yap</div>

            <div class="input-box">
                <input type="email" placeholder="Email  Giriniz" required=""  name="AD"/>
                <div class="underline"></div>
            </div>

            <div class="input-box">
                <input type="password" placeholder="Şifrenizi Giriniz" required="" name="SIFRE" />
                <div class="underline"></div>
            </div>

            <div class="input-box button">
                <input type="submit" value="Giriş Yap" />
            </div>
        }
    </div>
</body>
</html>
